<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.Tenant.TenantProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tenant_profile_profilePicture"
            android:layout_width="220dp"
            android:layout_height="232dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/child_po"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tenant_profile_profileTag" />

        <TextView
            android:id="@+id/tenant_profile_profileTag"
            android:layout_width="145dp"
            android:layout_height="61dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/tenant_profile_nameView"
            android:layout_width="319dp"
            android:layout_height="59dp"
            android:layout_marginTop="80dp"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tenant_profile_profilePicture" />

        <TextView
            android:id="@+id/tenant_profile_emailView"
            android:layout_width="319dp"
            android:layout_height="59dp"
            android:layout_marginTop="24dp"
            android:text="Email"
            android:textAlignment="viewStart"
            android:textSize="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tenant_profile_surnameView"
            app:layout_constraintVertical_bias="0.133" />

        <TextView
            android:id="@+id/tenant_profile_surnameView"
            android:layout_width="319dp"
            android:layout_height="59dp"
            android:layout_marginTop="28dp"
            android:text="Surname"
            android:textAlignment="viewStart"
            android:textSize="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tenant_profile_nameView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>